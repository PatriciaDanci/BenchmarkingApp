<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/infoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Information"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <!-- CPU Information Button -->
    <Button
        android:id="@+id/cpuInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPU Information"
        android:layout_below="@id/infoTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <!-- GPU Information Button -->
    <Button
        android:id="@+id/gpuInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPU Information"
        android:layout_below="@id/cpuInfoButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Memory Information Button -->
    <Button
        android:id="@+id/memoryInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memory Information"
        android:layout_below="@id/gpuInfoButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Battery Information Button -->
    <Button
        android:id="@+id/batteryInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Information"
        android:layout_below="@id/memoryInfoButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- OS Information Button -->
    <Button
        android:id="@+id/osInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operating System"
        android:layout_below="@id/batteryInfoButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Device Information Button -->
    <Button
        android:id="@+id/deviceInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Information"
        android:layout_below="@id/osInfoButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>
